extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Supplier
			small menu for editing supplier data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Supplier
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/supplier/edit/#{(kode==undefined) ? data.kode : kode}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Kode Supplier
									input(type='text',value="#{data.kode}",name='kode',placeholder='Masukkan Kode Supplier', autofocus).form-control
								.form-group
									label
										| Nama Supplier
									input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama',placeholder='Masukkan Nama Supplier').form-control
								.form-group
									label
										| Alamat Supplier
									input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Masukkan Alamat Supplier').form-control
								.form-group
									label
										| Email Supplier
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='email',placeholder='Masukkan Email Supplier').form-control
								.form-group
									label
										| No. Telp Supplier
									input(type='text',value="#{ (telp == undefined) ? data.telp : telp }",name='telp',placeholder='Masukkan No. Telpon Supplier').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/supplier').btn.btn-primary.pull-right
									| Back