extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Barang Page
			small it all starts here
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Barang
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
			.box-body
				- if(messages.msg_info)
					.alert.alert-success.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-check
							| Success!
						| !{messages.msg_info}
				- if(messages.msg_error)
					.alert.alert-danger.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-ban
							| Alert!
						| !{messages.msg_error}
				a(href='barang/add').pull-left.btn.btn-primary
					i.fa.fa-plus 
					|  Add Barang
				.data-table
					table.table.table-bordered
						tr
							th
								| Kode
							th
								| Nama
							th
								| Merek
							th
								| Satuan
							th
								| Jumlah
							th
								| Harga
							th
								| Action
							if messages.msg_error
								| !{messages.msg_error}
							else
								for row, index in data 
									tr
										td #{row.kode}
										td #{row.nama}
										td #{row.merek}
										td #{row.satuan}
										td #{row.jumlah}
										td #{row.harga}
										td
											div(style='display:inline-block')
												a(href='/barang/edit/#{row.kode}').btn.btn-sm.btn-primary
														i.fa.fa-edit
											| 
											div(style='display:inline-block')
												form(method='post', action='/barang/delete/#{row.kode}')
													input(type="hidden",name="_method", value="DELETE")
													button.btn.btn-sm.btn-danger(type='submit')
														i.fa.fa-remove